router.put('/{{resource_name}}/:identifier', function(req, res) {
	var data = {
		{{id_field_name}}: req.params.identifier{{required_fields}}
	};
	{{not_required_fields}}
	var query = {
		_id: req.params.identifier
	};
	{{query_by_type}}
	{{model_name}}.findOneAndUpdate(
		query,
		data, {
			new: true,
			upsert: true
		},
		function(err, doc) {
			if (err)
				res.status(400).send();
			else
				res.status(201).send(doc.cleanObject());
		}
	);
});
